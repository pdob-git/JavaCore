<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox stylesheets="@../css/main.css" xmlns:fx="http://javafx.com/fxml/1" prefHeight="207.0" prefWidth="188.0" xmlns="http://javafx.com/javafx/8.0.171"
      fx:controller="pl.pdob.fxcss.controller.MainPaneController">
    <children>
        <TextArea fx:id="mainTextArea" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS"/>
        <HBox>
            <children>
                <Button styleClass="yellowButton" fx:id="upperCaseButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="UPPER"
                        HBox.hgrow="ALWAYS"/>
                <Button styleClass="yellowButton" fx:id="lowerCaseButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="lower"
                        HBox.hgrow="ALWAYS"/>
                <Button id="clearButton" fx:id="clearButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Clear"
                        HBox.hgrow="ALWAYS"/>
            </children>
        </HBox>
    </children>
</VBox>
